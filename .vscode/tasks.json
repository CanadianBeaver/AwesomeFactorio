{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docusaurus install",
            "type": "shell",
            "command": "npm clean-install",
            "options": {
                "cwd": "${workspaceRoot}/website"
            },
        },
        {
            "label": "Docusaurus build",
            "type": "npm",
            "script": "build",
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceRoot}/website"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docusaurus serve",
            "type": "npm",
            "script": "serve",
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceRoot}/website"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Docusaurus clear",
            "type": "npm",
            "script": "clear",
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceRoot}/website"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}