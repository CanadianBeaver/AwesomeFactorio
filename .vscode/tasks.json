{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Publish MyGameStart localy",
            "type": "shell",
            "command": "./scripts/publish-MyGameStart-mod-localy.cmd",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docusaurus",
            "type": "npm",
            "script": "start",
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/Website-Generators/docusaurus"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Docusaurus RUS",
            "type": "npm",
            "script": "start -- --locale ru",
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/Website-Generators/docusaurus",
            },
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            }
        }

    ]
}